<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Booking Details <%= @booking.id %></h1>
    <%= link_to "Back to Profile", profile_path, class: "btn btn-outline-secondary" %>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Apartment Information</h5>
          <div class="d-flex gap-3">
            <% if @booking.apartment.photo.attached? %>
              <%= image_tag @booking.apartment.photo, style: "width: 150px; height: 100px; object-fit: cover; border-radius: 8px;" %>
            <% end %>
            <div>
              <h4><%= link_to @booking.apartment.title, apartment_path(@booking.apartment) %></h4>
              <p class="text-muted"><%= @booking.apartment.address %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Stay Details</h5>
          <table class="table">
            <tr>
              <th>Status</th>
              <td><span class="badge bg-<%= @booking.status == 'confirmed' ? 'success' : 'warning' %>"><%= @booking.status.capitalize %></span></td>
            </tr>
            <tr>
              <th>Check-in</th>
              <td><%= @booking.start_date.strftime("%A, %d %B %Y") %></td>
            </tr>
            <tr>
              <th>Check-out</th>
              <td><%= @booking.end_date.strftime("%A, %d %B %Y") %></td>
            </tr>
            <tr>
              <th>Duration</th>
              <td><%= (@booking.end_date - @booking.start_date).to_i %> nights</td>
            </tr>
          </table>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-primary">
        <div class="card-body">
          <h5 class="card-title text-primary">Price Summary</h5>
          <div class="d-flex justify-content-between mb-2">
            <span>Rate per night</span>
            <span><%= number_to_currency(@booking.apartment.price, unit: "€") %></span>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <strong>Total</strong>
            <strong class="h4 text-primary"><%= number_to_currency(@booking.total_price, unit: "€") %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
