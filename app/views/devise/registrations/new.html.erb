<div class="form-container">
  <div class="form-card">
    <div class="form-header">
      <%= image_tag "logo.png", alt: "Logo", class: "form-logo" %>
      <h2 class="form-title">Sign up</h2>
    </div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-body">
    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="form-group role-selection">
      <%= f.label :role, "Are you..." %><br>

      <div class="role-options d-flex gap-3 mt-1">

        <div class="form-check">
          <%= f.radio_button :role, 'host', class: "form-check-input", id: "role_host" %>
          <%= f.label :role_host, "Host", class: "form-check-label" %>
        </div>

        <div class="form-check">
          <%= f.radio_button :role, 'tenant', class: "form-check-input", id: "role_tenant", checked: true %>
          <%= f.label :role_tenant, "Guest", class: "form-check-label" %>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Sign up", class: "custom-btn-pill" %>
    </div>
<% end %>
  </div>

   <div class="form-footer">
      <%= render "devise/shared/links" %>
    </div>
   </div>
  </div>
