<div class="form-container">
  <div class="form-card">
    <div class="form-header">
      <%= image_tag "logo.png", alt: "Logo", class: "form-logo" %>
        <h2>Change your password</h2>
    </div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

<div class="form-body">
    <div class="form-group">
    <%= f.label :password, "New password", class: "form-input" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input" %>
  </div>

    <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password", class: "form-input" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-input" %>
  </div>

    <div class="form-actions">
    <%= f.submit "Change my password", class: "custom-btn-pill"  %>
  </div>
<% end %>
  </div>

<div class="form-footer">
<%= render "devise/shared/links" %>
  </div>
   </div>
  </div>
