<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Apartments</h1>
    <%= link_to "Add New Apartment", new_apartment_path, class: "btn btn-primary" %>
  </div>

  <% if @apartments.any? %>
    <div class="row">
      <% @apartments.each do |apartment| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <% if apartment.photo.attached? %>
              <%= image_tag apartment.photo, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= apartment.title %></h5>
              <p class="card-text text-muted"><%= apartment.address %></p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="fw-bold">â‚¬<%= apartment.price %>/night</span>
                <div class="btn-group">
                  <%= link_to "Edit", edit_apartment_path(apartment), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "Delete", apartment_path(apartment), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center mt-5">
      <p>You haven't listed any apartments yet.</p>
      <%= link_to "List your first apartment", new_apartment_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
