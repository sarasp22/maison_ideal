<div class="container mt-5">
  <h1 class="mb-4">Profile</h1>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Personal details</h5>
      <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, "Name", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", disabled: true %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @user.tenant? %>
    <div class="bookings-section mb-5">
      <div class="section-header-bookings">
        <h2>My Bookings</h2>
        <span class="bookings-count"><%= @bookings.count %> <%= @bookings.count == 1 ? 'booking' : 'bookings' %></span>
      </div>

      <% if @bookings.any? %>
        <div class="bookings-grid">
          <% @bookings.each do |booking| %>
            <div class="booking-card <%= booking.status %>">
              <div class="booking-header">
                <% if booking.apartment.photo.attached? %>
                  <%= image_tag booking.apartment.photo, class: "booking-image", alt: booking.apartment.title %>
                <% else %>
                  <div class="booking-image-placeholder">üè†</div>
                <% end %>
                <div class="booking-status-badge <%= booking.status %>">
                  <%= booking.status.capitalize %>
                </div>
              </div>

              <div class="booking-body">
                <h3 class="booking-title"><%= booking.apartment.title %></h3>
                <p class="booking-address"><%= booking.apartment.address %></p>
                <div class="booking-dates">
                  <div class="date-item">
                    <span class="date-label">Check-in</span>
                    <span class="date-value"><%= booking.start_date.strftime("%d %b %Y") %></span>
                  </div>
                  <div class="date-item">
                    <span class="date-label">Check-out</span>
                    <span class="date-value"><%= booking.end_date.strftime("%d %b %Y") %></span>
                  </div>
                </div>
                <div class="booking-info-grid">
                  <div class="info-item">
                    <span class="info-label">Total</span>
                    <span class="info-value price">‚Ç¨ <%= number_with_precision(booking.total_price, precision: 2) %></span>
                  </div>
                </div>
              </div>

              <div class="booking-actions">
                <%= link_to "View Details", booking_path(booking), class: "btn-booking view" %>
                <% if booking.status == 'pending' && booking.start_date > Date.today %>
                  <%= link_to "Edit", edit_booking_path(booking), class: "btn-booking edit" %>
                  <%= link_to "Cancel", booking_path(booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn-booking cancel" %>
                <% elsif booking.status == 'confirmed' && booking.start_date > Date.today %>
                  <span class="booking-notice">Contact host to modify</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <h3>No bookings yet</h3>
          <p>Start exploring apartments and make your first booking!</p>
          <%= link_to "Browse Apartments", apartments_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @user.host? %>
    <div class="host-section">
      <h2 class="mb-3">My apartments</h2>
      <% if @apartments.any? %>
        <div class="row">
          <% @apartments.each do |apartment| %>
            <div class="col-md-4 mb-3">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title"><%= apartment.title %></h5>
                  <p class="card-text"><%= apartment.address %></p>
                  <p><strong>‚Ç¨ <%= apartment.price %></strong></p>
                  <%= link_to "View", apartment_path(apartment), class: "btn btn-outline-primary btn-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>You haven't listed any apartments yet.</p>
      <% end %>

      <h2 class="mt-5 mb-3">Bookings received</h2>
      <% if @received_bookings.any? %>
        <div class="list-group">
          <% @received_bookings.each do |booking| %>
            <div class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <h5><%= booking.apartment.title %></h5>
                <p class="mb-1"><strong>Guest:</strong> <%= booking.user.name || booking.user.email %></p>
                <p class="mb-1 text-muted"><%= booking.start_date %> to <%= booking.end_date %></p>
                <p class="mb-0">
                  <strong>Status:</strong>
                  <span class="badge bg-<%= status_color(booking.status) %>"><%= booking.status.capitalize %></span>
                </p>
              </div>
              <div class="d-flex gap-2">
                <% if booking.status == 'pending' %>
                  <%= link_to "Accept", accept_booking_path(booking), data: { turbo_method: :patch }, class: "btn btn-success btn-sm" %>
                  <%= link_to "Reject", reject_booking_path(booking), data: { turbo_method: :patch, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
                <% end %>
                <%= link_to "Details", booking_path(booking), class: "btn btn-outline-primary btn-sm" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No bookings received yet.</p>
      <% end %>

      <div class="mt-3">
        <%= link_to "Manage My Apartments", my_apartments_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  <% end %>

  <div class="d-flex gap-3 mt-5 pt-3 border-top">
    <%= link_to "Change password", edit_user_registration_path, class: "btn btn-outline-primary" %>
    <%= link_to "Delete profile", registration_path(current_user), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
  </div>
</div>
